{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["cypress", "node"]
  },
  "include": [
    "scr/**/*.ts",
    "cypress/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
